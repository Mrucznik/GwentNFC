<Window x:Class="Edytor_kart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Edytor_kart"
        mc:Ignorable="d"
        Title="Kreator kart do Gwinta" Height="259.985" Width="309.985">
    <Grid>
        <DockPanel Margin="10">
            <StackPanel DockPanel.Dock="Right" Margin="10,0,0,0">
                <Button Name="AddCard" Click="AddCard_Click">Dodaj kartę</Button>
                <Button Name="CardInfo" Margin="0,5,0,0" Click="CardInfo_Click">Więcej info</Button>
                <Button Name="ChangeCard" Margin="0,5" Click="ChangeCard_Click">Edytuj kartę</Button>
                <Button Name="DeleteCard" Click="DeleteCard_Click">Usuń kartę</Button>
                <TextBlock Margin="0,5,0,0" HorizontalAlignment="Center">Auto Edit</TextBlock>
                <CheckBox Name="Autoedit" HorizontalAlignment="Center"></CheckBox>
                <Button Name="SaveButton" Content="Zapisz" Margin="0, 10" Click="SaveButton_Click"></Button>
            </StackPanel>
            <ListBox Name="LbCards" DisplayMemberPath="FullName"></ListBox>
        </DockPanel>
    </Grid>
</Window>
